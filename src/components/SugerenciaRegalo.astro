    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);

        if (typeof window !== "undefined") {
            document.addEventListener("DOMContentLoaded", () => {
                // Animaci√≥n del bot√≥n decorativo
                gsap.fromTo(
                    "#boton-decorativo-regalos",
                    {
                        opacity: 0,
                        scale: 0,
                        rotation: -180,
                    },
                    {
                        opacity: 1,
                        scale: 1,
                        rotation: 0,
                        duration: 1,
                        ease: "back.out(1.7)",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );

                // Animaci√≥n de la card
                gsap.fromTo(
                    "#card-principal-regalos",
                    {
                        opacity: 0,
                        y: 50,
                        scale: 0.95,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        scale: 1,
                        duration: 1,
                        ease: "power3.out",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );

                // Animaci√≥n del t√≠tulo
                gsap.fromTo(
                    "#titulo-regalos",
                    {
                        opacity: 0,
                        y: -20,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 0.8,
                        ease: "power2.out",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );

                // Animaci√≥n del texto
                gsap.fromTo(
                    "#texto-regalos",
                    {
                        opacity: 0,
                        y: 20,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 0.8,
                        delay: 0.2,
                        ease: "power2.out",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );

                // Animaci√≥n del logo
                gsap.fromTo(
                    "#logo-multicenter",
                    {
                        opacity: 0,
                        scale: 0.8,
                    },
                    {
                        opacity: 1,
                        scale: 1,
                        duration: 0.8,
                        delay: 0.4,
                        ease: "back.out(1.7)",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );

                // Animaci√≥n del bot√≥n
                gsap.fromTo(
                    "#boton-mesa-regalos",
                    {
                        opacity: 0,
                        y: 20,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 0.8,
                        delay: 0.6,
                        ease: "power2.out",
                        scrollTrigger: {
                            trigger: "#card-regalos",
                            start: "top 80%",
                            toggleActions: "play none none none",
                        },
                    },
                );
            });
        }

<!-- ðŸ“œ JAVASCRIPT PARA EL MODAL Y ANIMACIONES                   -->
<!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
<script is:inline>
    // Inicializar AOS
    AOS.init({
        duration: 800,
        easing: "ease-in-out",
        once: true,
        mirror: false,
        offset: 100,
    });

    // Esperar a que el DOM estÃ© listo
    document.addEventListener("DOMContentLoaded", function () {
        const modal = document.getElementById("modalFoto");
        const modalImage = document.getElementById("modalImage");
        const foto1 = document.getElementById("foto1");
        const foto2 = document.getElementById("foto2");
        const btnCerrar = document.getElementById("btnCerrar");

        // FunciÃ³n para abrir modal
        function abrirModal(imageSrc) {
            modalImage.src = imageSrc;
            modal.classList.remove("hidden");
            modal.classList.add("flex");
            document.body.style.overflow = "hidden";

            // AnimaciÃ³n de entrada
            setTimeout(() => {
                modal.style.opacity = "1";
            }, 10);
        }

        // FunciÃ³n para cerrar modal
        function cerrarModal() {
            modal.style.opacity = "0";
            setTimeout(() => {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
                document.body.style.overflow = "auto";
            }, 300);
        }

        // Click en foto 1
        if (foto1) {
            foto1.addEventListener("click", function () {
                abrirModal("/imagenes/foto1.png");
            });
        }

        // Click en foto 2
        if (foto2) {
            foto2.addEventListener("click", function () {
                abrirModal("/imagenes/foto1.png");
            });
        }

        // Click en botÃ³n cerrar
        if (btnCerrar) {
            btnCerrar.addEventListener("click", function (e) {
                e.stopPropagation();
                cerrarModal();
            });
        }

        // Click en el fondo para cerrar
        if (modal) {
            modal.addEventListener("click", function (e) {
                if (e.target === modal) {
                    cerrarModal();
                }
            });
        }

        // Prevenir cierre al clickear la imagen
        if (modalImage) {
            modalImage.addEventListener("click", function (e) {
                e.stopPropagation();
            });
        }

        // Cerrar con tecla ESC
        document.addEventListener("keydown", function (event) {
            if (event.key === "Escape") {
                cerrarModal();
            }
        });
    });
</script>

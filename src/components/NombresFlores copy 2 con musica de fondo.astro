<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üíå Iniciando animaciones del sobre y tarjetas...");

        // ‚ïê‚ïê‚ïê AUDIO DE FONDO ‚ïê‚ïê‚ïê
        const audio = new Audio("/musica/melodia.mp3");
        audio.loop = true;
        audio.volume = 0.5;

        const botonToggle = document.getElementById("toggle-musica");
        const iconoPlay = document.getElementById("icono-play");
        const iconoPause = document.getElementById("icono-pause");

        let estaReproduciendo = false;

        // Funci√≥n para reproducir m√∫sica
        function reproducirMusica() {
            audio.play().catch((error) => {
                console.log("Error al reproducir audio:", error);
            });
            estaReproduciendo = true;
            iconoPlay.classList.add("hidden");
            iconoPause.classList.remove("hidden");
        }

        // Funci√≥n para pausar m√∫sica
        function pausarMusica() {
            audio.pause();
            estaReproduciendo = false;
            iconoPlay.classList.remove("hidden");
            iconoPause.classList.add("hidden");
        }

        // Toggle al hacer clic en el bot√≥n
        botonToggle.addEventListener("click", () => {
            if (estaReproduciendo) {
                pausarMusica();
            } else {
                reproducirMusica();
            }
        });

        // Auto-reproducir cuando el usuario interact√∫a por primera vez
        const iniciarAudio = () => {
            if (!estaReproduciendo) {
                reproducirMusica();
            }
            document.removeEventListener("click", iniciarAudio);
        };
        document.addEventListener("click", iniciarAudio);

        // ‚ïê‚ïê‚ïê ANIMACI√ìN DEL SOBRE ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#sobre-imagen",
            {
                opacity: 0,
                y: -100,
                scale: 0.8,
                rotation: -5,
            },
            {
                opacity: 1,
                y: 0,
                scale: 1,
                rotation: 0,
                duration: 1.2,
                ease: "back.out(1.3)",
                scrollTrigger: {
                    trigger: "#sobre-container",
                    start: "top 80%",
                    toggleActions: "play none none none",
                },
            },
        );

        // Efecto de flotaci√≥n continua en el sobre
        gsap.to("#sobre-imagen", {
            y: -10,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.2,
        });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN TARJETA IZQUIERDA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#tarjeta-izquierda",
            {
                opacity: 0,
                x: -100,
            },
            {
                opacity: 1,
                x: 0,
                duration: 0.8,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: "#tarjetas-container",
                    start: "top 75%",
                    toggleActions: "play none none none",
                },
                delay: 0.3,
            },
        );

        // ‚ïê‚ïê‚ïê ANIMACI√ìN TARJETA DERECHA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#tarjeta-derecha",
            {
                opacity: 0,
                x: 100,
            },
            {
                opacity: 1,
                x: 0,
                duration: 0.8,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: "#tarjetas-container",
                    start: "top 75%",
                    toggleActions: "play none none none",
                },
                delay: 0.5,
            },
        );

        // ‚ïê‚ïê‚ïê ANIMACI√ìN DEL BOT√ìN DE M√öSICA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#boton-musica",
            {
                opacity: 0,
                scale: 0,
                rotation: -180,
            },
            {
                opacity: 1,
                scale: 1,
                rotation: 0,
                duration: 0.6,
                ease: "back.out(1.7)",
                delay: 1.5,
            },
        );

        // Efecto de pulsaci√≥n en el bot√≥n
        gsap.to("#boton-musica", {
            scale: 1.05,
            duration: 1.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 2,
        });

        console.log("‚ú® Animaciones del sobre completadas!");
    });
</script>


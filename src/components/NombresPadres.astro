<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    if (typeof window !== "undefined") {
        document.addEventListener("DOMContentLoaded", () => {
            // ðŸŽ¯ ANIMACIÃ“N ELEGANTE DE ENTRADA
            const tl = gsap.timeline({
                scrollTrigger: {
                    trigger: "#card-padres",
                    start: "top 80%",
                    once: true,
                },
            });

            // Todos los elementos entran al mismo tiempo con diferentes efectos
            tl.fromTo(
                "#boton-decorativo",
                {
                    opacity: 0,
                    scale: 0,
                    rotation: -180,
                },
                {
                    opacity: 1,
                    scale: 1,
                    rotation: 0,
                    duration: 1,
                    ease: "back.out(1.7)",
                },
                0, // Empieza en el tiempo 0
            )
                .fromTo(
                    "#card-principal",
                    {
                        opacity: 0,
                        y: 50,
                        scale: 0.95,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        scale: 1,
                        duration: 1,
                        ease: "power3.out",
                    },
                    0, // Empieza en el tiempo 0
                )
                .fromTo(
                    "#titulo-padres",
                    {
                        opacity: 0,
                        y: -30,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 1,
                        ease: "power2.out",
                    },
                    0, // Empieza en el tiempo 0
                )
                .fromTo(
                    "#seccion-novia",
                    {
                        opacity: 0,
                        x: -30,
                    },
                    {
                        opacity: 1,
                        x: 0,
                        duration: 1,
                        ease: "power2.out",
                    },
                    0, // Empieza en el tiempo 0
                )
                .fromTo(
                    "#seccion-novio",
                    {
                        opacity: 0,
                        x: 30,
                    },
                    {
                        opacity: 1,
                        x: 0,
                        duration: 1,
                        ease: "power2.out",
                    },
                    0, // Empieza en el tiempo 0
                );
        });
    }
</script>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    if (typeof window !== "undefined") {
        document.addEventListener("DOMContentLoaded", () => {
            // ðŸŽ¯ ANIMACIÃ“N ELEGANTE DE ENTRADA
            const tl = gsap.timeline({
                scrollTrigger: {
                    trigger: "#card-padrinos",
                    start: "top 80%",
                    once: true,
                },
            });

            // Card entra desde abajo
            tl.fromTo(
                "#card-principal-padrinos",
                {
                    opacity: 0,
                    y: 50,
                    scale: 0.95,
                },
                {
                    opacity: 1,
                    y: 0,
                    scale: 1,
                    duration: 1,
                    ease: "power3.out",
                },
                0,
            )
                // TÃ­tulo entra desde arriba
                .fromTo(
                    "#titulo-padrinos",
                    {
                        opacity: 0,
                        y: -30,
                    },
                    {
                        opacity: 1,
                        y: 0,
                        duration: 1,
                        ease: "power2.out",
                    },
                    0,
                )
                // Grid de padrinos aparece con fade
                .fromTo(
                    "#grid-padrinos",
                    {
                        opacity: 0,
                    },
                    {
                        opacity: 1,
                        duration: 1,
                        ease: "power2.out",
                    },
                    0.3,
                );
        });
    }
</script>

